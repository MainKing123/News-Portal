# Импортируем необходимые модели
from yourapp.models import Author, Category, Post, Comment
from django.contrib.auth.models import User

# Создаем пользователей
user1 = User.objects.create_user('user1')
user2 = User.objects.create_user('user2')

# Создаем авторов
author1 = Author.objects.create(user=user1)
author2 = Author.objects.create(user=user2)

# Добавляем категории
category1 = Category.objects.create(name='Спорт')
category2 = Category.objects.create(name='Политика')
category3 = Category.objects.create(name='Образование')
category4 = Category.objects.create(name='Технологии')

# Добавляем статьи и новости
post1 = Post.objects.create(author=author1, article_type='article', title='Статья о спорте', text='Текст статьи о спорте.')
post2 = Post.objects.create(author=author2, article_type='article', title='Политические события', text='Текст политической статьи.')
post3 = Post.objects.create(author=author1, article_type='news', title='Новости технологий', text='Текст новости о технологиях.')

# Присваиваем категории
post1.categories.add(category1, category4)  # Статья о спорте относится к Спорту и Технологиям
post2.categories.add(category2)              # Политическая статья относится к Политике
post3.categories.add(category3)              # Новость о технологиях относится к Образованию

# Создаем комментарии
comment1 = Comment.objects.create(post=post1, user=user1, text='Отличная статья!')
comment2 = Comment.objects.create(post=post1, user=user2, text='Согласен с мнением автора.')
comment3 = Comment.objects.create(post=post2, user=user1, text='Интересно!')
